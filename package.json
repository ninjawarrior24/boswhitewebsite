{
  "name": "boswhitewebsite",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:images": "node scripts/convert-images.js",
    "build:css": "postcss css/styles.css -o css/styles.min.css",
    "build:js": "terser js/app.js -o js/app.min.js --compress --mangle",
    "build:critical": "critical index.html --inline --width=1300 --height=900",
    "build:sw": "node scripts/build-sw.js",
    "build:update-html": "node scripts/update-html-after-build.js",
    "build": "npm run build:images && npm run build:css && npm run build:js && npm run build:critical && npm run build:sw && npm run build:update-html",
    "screenshot": "node scripts/capture-breakpoints.js"
  },
  "devDependencies": {
    "cheerio": "^1.2.0",
    "critical": "^7.2.1",
    "cssnano": "^7.1.2",
    "playwright": "^1.58.0",
    "postcss-cli": "^11.0.1",
    "sharp": "^0.34.5",
    "terser": "^5.46.0",
    "workbox-build": "^7.4.0"
  }
}
